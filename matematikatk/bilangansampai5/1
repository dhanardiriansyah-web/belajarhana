        .game-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            cursor: pointer;
            user-select: none;
        }
        .game-card:active {
            transform: scale(0.95);
        }
        .game-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .correct {
            background-color: #86efac !important; /* green-300 */
            border-color: #22c55e !important; /* green-500 */
            transform: scale(1.1) !important;
        }
        .incorrect {
            background-color: #fca5a5 !important; /* red-300 */
            border-color: #ef4444 !important; /* red-500 */
            animation: shake 0.5s;
        }
        .number-button {
            font-size: 2.5rem;
            font-weight: 900;
            width: 80px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 9999px;
            background-color: white;
            border: 4px solid #e5e7eb;
            color: #3b82f6;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        
        /* --- PERBAIKAN BINGKAI LIMA (FIVE FRAME) --- */
        .five-frame {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 8px;
            width: 100%;
            max-width: 350px;
            padding: 10px;
            background-color: white;
            border: 4px solid #3b82f6;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        .five-frame-cell {
            aspect-ratio: 1 / 1; /* Memastikan kotak selalu persegi */
            width: 100%;
            position: relative;
            border: 2px solid #cbd5e1; /* slate-300 */
            border-radius: 8px;
            background-color: #f8fafc;
            display: flex; /* Menggunakan Flexbox untuk memusatkan titik */
            align-items: center;
            justify-content: center;
        }
        .five-frame-dot {
            width: 70%;
            height: 70%;
            border-radius: 50%;
            background-color: #3b82f6; /* blue-500 */
            box-shadow: inset -2px -2px 4px rgba(0,0,0,0.2);
            /* Posisi absolut dihapus agar mengikuti flexbox parent */
        }

        /* Animations */
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-8px); }
            75% { transform: translateX(8px); }
        }
        @keyframes pop {
            0% { transform: scale(0); opacity: 0; }
            80% { transform: scale(1.1); opacity: 1; }
            100% { transform: scale(1); }
        }
        .pop-in {
            animation: pop 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
        }

        /* Nav Active State */
        .nav-button-active {
            background-color: #3b82f6; /* blue-600 */
            color: white;
            transform: scale(1.05);
            box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.5);
        }
        
        /* Scattered Layout Container */
        .scatter-box {
            position: relative;
            width: 100%;
            height: 250px;
            background-color: white;
            border: 3px dashed #cbd5e1;
            border-radius: 1rem;
            overflow: hidden;
        }
        .scatter-item {
            position: absolute;
            transition: all 0.3s ease;
        }
