    <div class="w-full max-w-2xl bg-white rounded-3xl shadow-xl p-4 md:p-8 border-b-8 border-blue-200">
        <!-- Header -->
        <header class="text-center mb-6">
            <h1 class="text-2xl md:text-4xl font-black text-blue-600 tracking-tight">Berhitung 1 sampai 5</h1>
            <p class="text-gray-500 text-sm md:text-base mt-1 font-bold">Matematika TK - Semester 1</p>
        </header>

        <!-- Navigation -->
        <nav class="flex justify-center space-x-2 md:space-x-4 mb-8 overflow-x-auto py-2">
            <button id="nav-game1" class="nav-button nav-button-active whitespace-nowrap text-sm md:text-base font-bold py-2 px-6 rounded-full bg-blue-500 text-white shadow-md transition-all" onclick="switchGame('game1')">
                üçé Menghitung Benda
            </button>
            <button id="nav-game2" class="nav-button whitespace-nowrap text-sm md:text-base font-bold py-2 px-6 rounded-full bg-gray-100 text-gray-600 shadow-md transition-all hover:bg-gray-200" onclick="switchGame('game2')">
                üî≤ Bingkai Lima
            </button>
            <button id="nav-game3" class="nav-button whitespace-nowrap text-sm md:text-base font-bold py-2 px-6 rounded-full bg-gray-100 text-gray-600 shadow-md transition-all hover:bg-gray-200" onclick="switchGame('game3')">
                üî¢ Pola Angka
            </button>
        </nav>

        <main class="relative min-h-[400px]">
            <!-- Audio Button -->
            <div class="absolute top-0 right-0 z-10">
                <button onclick="playCurrentInstruction()" class="bg-yellow-400 hover:bg-yellow-500 text-white p-2 rounded-full shadow-lg transition-transform hover:scale-110 active:scale-90" aria-label="Dengarkan Soal">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path></svg>
                </button>
            </div>

            <!-- GAME 1: MENGHITUNG BENDA (Apples, Stars, Cubes, Stickers) -->
            <div id="game1" class="game-container flex flex-col items-center justify-between h-full pt-10">
                <div id="game1-instruction" class="text-xl font-bold text-gray-700 mb-4 text-center">Berapa jumlah benda ini?</div>
                
                <!-- Display Area -->
                <div id="game1-display" class="w-full flex justify-center items-center mb-8 min-h-[200px]">
                    <!-- Items will be injected here -->
                </div>

                <!-- Options -->
                <div id="game1-options" class="flex justify-center gap-4 md:gap-8 w-full">
                    <!-- Buttons will be injected here -->
                </div>
            </div>

            <!-- GAME 2: BINGKAI LIMA (Five Frame) -->
            <div id="game2" class="game-container hidden flex flex-col items-center justify-between h-full pt-10">
                <div id="game2-instruction" class="text-xl font-bold text-gray-700 mb-4 text-center">Hitung titik di dalam bingkai.</div>
                
                <div class="flex flex-col items-center justify-center flex-grow w-full mb-8">
                    <div id="game2-frame" class="five-frame bg-blue-50">
                        <!-- Cells injected here -->
                    </div>
                </div>

                <div id="game2-options" class="flex justify-center gap-4 md:gap-8 w-full">
                    <!-- Buttons injected here -->
                </div>
            </div>

            <!-- GAME 3: POLA & URUTAN -->
            <div id="game3" class="game-container hidden flex flex-col items-center justify-between h-full pt-10">
                <div id="game3-instruction" class="text-xl font-bold text-gray-700 mb-4 text-center">Angka apa yang hilang?</div>
                
                <div id="game3-display" class="flex items-center justify-center gap-3 md:gap-6 mb-12 flex-wrap">
                    <!-- Sequence injected here -->
                </div>

                <div id="game3-options" class="flex justify-center gap-4 md:gap-8 w-full">
                    <!-- Buttons injected here -->
                </div>
            </div>

            <!-- Feedback Area -->
            <div id="feedback-area" class="h-12 mt-6 flex items-center justify-center text-2xl font-black text-center transition-all duration-300 transform scale-0">
                <!-- Feedback text -->
            </div>
