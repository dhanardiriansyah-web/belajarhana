    <!-- Script Logic -->
    <script>
        // --- ASSETS (SVG) ---
        // Visuals matching the LaTeX description: Apple, Star, Cube, Sticker (Smiley)
        const svgs = {
            apple: `<svg viewBox="0 0 100 100" class="w-full h-full drop-shadow-md"><path d="M50,25 C60,5 90,10 90,40 C90,75 55,95 50,95 C45,95 10,75 10,40 C10,10 40,5 50,25 Z" fill="#ef4444"/><path d="M50,25 Q55,5 65,10" stroke="#78350f" stroke-width="3" fill="none"/><path d="M50,25 Q30,15 30,35" fill="#4ade80"/></svg>`,
            star: `<svg viewBox="0 0 100 100" class="w-full h-full drop-shadow-md"><polygon points="50,5 61,35 95,35 68,55 79,90 50,70 21,90 32,55 5,35 39,35" fill="#facc15" stroke="#eab308" stroke-width="3"/></svg>`,
            cube: `<svg viewBox="0 0 100 100" class="w-full h-full drop-shadow-md"><path d="M25,35 L75,35 L75,85 L25,85 Z" fill="#60a5fa"/><path d="M25,35 L50,10 L100,10 L75,35 Z" fill="#93c5fd"/><path d="M75,85 L100,60 L100,10 L75,35 Z" fill="#2563eb"/></svg>`,
            sticker: `<svg viewBox="0 0 100 100" class="w-full h-full drop-shadow-md"><circle cx="50" cy="50" r="45" fill="#fde047" stroke="#eab308" stroke-width="3"/><circle cx="35" cy="40" r="5" fill="#374151"/><circle cx="65" cy="40" r="5" fill="#374151"/><path d="M30,65 Q50,85 70,65" fill="none" stroke="#374151" stroke-width="4" stroke-linecap="round"/></svg>`,
            dot: `<div class="w-full h-full rounded-full bg-slate-800 shadow-inner"></div>`
        };

        // --- STATE & CONFIG ---
        let activeGame = 'game1';
        let currentAnswer = 0;
        let isProcessing = false;
        
        const synth = window.speechSynthesis;

        // --- GAME LOGIC ---

        function switchGame(gameId) {
            activeGame = gameId;
            isProcessing = false;
            
            // UI Toggle
            document.querySelectorAll('.game-container').forEach(el => el.classList.add('hidden'));
            document.getElementById(gameId).classList.remove('hidden');
            
            // Nav Toggle
            document.querySelectorAll('.nav-button').forEach(el => {
                el.classList.remove('nav-button-active', 'bg-blue-500', 'text-white');
                el.classList.add('bg-gray-100', 'text-gray-600');
            });
            const btn = document.getElementById('nav-' + gameId);
            btn.classList.add('nav-button-active', 'bg-blue-500', 'text-white');
            btn.classList.remove('bg-gray-100', 'text-gray-600');

            // Reset Feedback
            const fb = document.getElementById('feedback-area');
            fb.classList.remove('scale-100');
            fb.classList.add('scale-0');

            // Init Game
            if(gameId === 'game1') initGame1();
            if(gameId === 'game2') initGame2();
            if(gameId === 'game3') initGame3();
        }

        function playFeedback(isCorrect, buttonEl) {
            if(isProcessing) return;
            isProcessing = true;

            const fb = document.getElementById('feedback-area');
            const compliments = ['Hebat!', 'Pintar!', 'Luar Biasa!', 'Benar Sekali!'];
            const encourages = ['Coba Lagi', 'Ayo Kamu Bisa', 'Sedikit Lagi'];

            if (isCorrect) {
                buttonEl.classList.add('correct');
                const text = compliments[Math.floor(Math.random() * compliments.length)];
                fb.textContent = "üéâ " + text;
                fb.className = "h-12 mt-6 flex items-center justify-center text-2xl font-black text-center transition-all duration-300 transform scale-100 text-green-500";
                speak(text);
                
                setTimeout(() => {
                    buttonEl.classList.remove('correct');
                    fb.classList.remove('scale-100');
                    fb.classList.add('scale-0');
                    // Next Round
                    if(activeGame === 'game1') initGame1();
                    if(activeGame === 'game2') initGame2();
                    if(activeGame === 'game3') initGame3();
                    isProcessing = false;
                }, 1500);
            } else {
                buttonEl.classList.add('incorrect');
                const text = encourages[Math.floor(Math.random() * encourages.length)];
                fb.textContent = "üí™ " + text;
                fb.className = "h-12 mt-6 flex items-center justify-center text-2xl font-black text-center transition-all duration-300 transform scale-100 text-red-400";
                speak(text);

                setTimeout(() => {
                    buttonEl.classList.remove('incorrect');
                    isProcessing = false;
                }, 1000);
            }
        }

        // --- GENERATORS ---

        function generateOptions(correct, containerId) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            
            // Generate distinct options (1-5)
            let opts = new Set([correct]);
            while(opts.size < 3) {
                let r = Math.floor(Math.random() * 5) + 1;
                if(r !== correct) opts.add(r);
            }
            let optionsArray = Array.from(opts).sort(() => Math.random() - 0.5);

            optionsArray.forEach(num => {
                const btn = document.createElement('button');
                btn.className = 'number-button hover:bg-blue-50';
                btn.textContent = num;
                btn.onclick = (e) => playFeedback(num === correct, e.currentTarget);
                container.appendChild(btn);
            });
        }

        function speak(text) {
            if (synth.speaking) synth.cancel();
            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = 'id-ID';
            utterance.rate = 0.9;
            utterance.pitch = 1.1;
            synth.speak(utterance);
        }

        function playCurrentInstruction() {
            if(activeGame === 'game1') speak("Hitung ada berapa bendanya?");
            if(activeGame === 'game2') speak("Hitung titik di dalam bingkai.");
            if(activeGame === 'game3') speak("Angka apa yang hilang?");
        }

        // --- GAME 1: OBJECT COUNTING ---
        function initGame1() {
            const num = Math.floor(Math.random() * 5) + 1;
            currentAnswer = num;
            
            const types = ['apple', 'star', 'cube', 'sticker'];
            const type = types[Math.floor(Math.random() * types.length)];
            const display = document.getElementById('game1-display');
            
            // Decide Layout: Grid or Scattered (50/50 chance)
            const isScattered = Math.random() > 0.5;

            if (isScattered) {
                display.innerHTML = `<div class="scatter-box shadow-inner bg-slate-50"></div>`;
                const box = display.querySelector('.scatter-box');
                for(let i=0; i<num; i++) {
                    const el = document.createElement('div');
                    el.className = 'scatter-item pop-in w-12 h-12 md:w-16 md:h-16';
                    el.innerHTML = svgs[type];
                    // Random Position (safe bounds)
                    el.style.left = (Math.random() * 70 + 5) + '%';
                    el.style.top = (Math.random() * 60 + 10) + '%';
                    // Random Rotation for "Scattered" feel
                    el.style.transform = `rotate(${Math.random() * 60 - 30}deg)`;
                    box.appendChild(el);
                }
            } else {
                // Linear/Grid Layout
                display.innerHTML = '';
                const wrapper = document.createElement('div');
                wrapper.className = 'flex flex-wrap justify-center gap-4 max-w-[300px]';
                for(let i=0; i<num; i++) {
                    const el = document.createElement('div');
                    el.className = 'pop-in w-16 h-16 md:w-20 md:h-20';
                    el.innerHTML = svgs[type];
                    wrapper.appendChild(el);
                }
                display.appendChild(wrapper);
            }

            generateOptions(num, 'game1-options');
            speak("Ada berapa?");
        }

        // --- GAME 2: FIVE FRAME ---
        function initGame2() {
            const num = Math.floor(Math.random() * 6); // 0 to 5
            currentAnswer = num;
            
            const frame = document.getElementById('game2-frame');
            frame.innerHTML = '';

            for(let i=0; i<5; i++) {
                const cell = document.createElement('div');
                cell.className = 'five-frame-cell';
                if(i < num) {
                    const dot = document.createElement('div');
                    dot.className = 'five-frame-dot pop-in';
                    cell.appendChild(dot);
                }
                frame.appendChild(cell);
            }

            // Options must include 0 for this game mode
            const container = document.getElementById('game2-options');
            container.innerHTML = '';
            let opts = new Set([num]);
            while(opts.size < 3) {
                let r = Math.floor(Math.random() * 6); // 0-5
                if(r !== num) opts.add(r);
            }
            let optionsArray = Array.from(opts).sort(() => Math.random() - 0.5);

            optionsArray.forEach(n => {
                const btn = document.createElement('button');
                btn.className = 'number-button hover:bg-blue-50';
                btn.textContent = n;
                btn.onclick = (e) => playFeedback(n === num, e.currentTarget);
                container.appendChild(btn);
            });
            
            speak("Ada berapa titik?");
        }

        // --- GAME 3: PATTERNS ---
        function initGame3() {
            const display = document.getElementById('game3-display');
            display.innerHTML = '';
            
            // Logic Types: 
            // 1. Next Number (1, 2, 3, ?)
            // 2. Missing Middle (1, ?, 3)
            // 3. Preceding (?, 4, 5)
            
            const mode = Math.floor(Math.random() * 3);
            let seq = [];
            
            if (mode === 0) { // Sequence: 1, 2, 3, [4]
                let start = Math.floor(Math.random() * 2) + 1; // 1 or 2
                seq = [start, start+1, start+2, start+3];
                currentAnswer = seq[3];
                seq[3] = '?';
            } else if (mode === 1) { // Middle: 2, [3], 4
                let start = Math.floor(Math.random() * 3) + 1; // 1 to 3
                currentAnswer = start + 1;
                seq = [start, '?', start+2];
            } else { // Order: 1, 2, [3], 4, 5 (Finding Missing)
                 // Simple full sequence with one missing
                 let arr = [1, 2, 3, 4, 5];
                 let missingIdx = Math.floor(Math.random() * 5);
                 currentAnswer = arr[missingIdx];
                 arr[missingIdx] = '?';
                 seq = arr;
            }

            seq.forEach(val => {
                const card = document.createElement('div');
                card.className = 'w-16 h-20 md:w-20 md:h-24 bg-white border-4 border-orange-300 rounded-lg flex items-center justify-center text-4xl font-black text-orange-500 shadow-sm';
                if(val === '?') {
                    card.className = 'w-16 h-20 md:w-20 md:h-24 bg-orange-100 border-4 border-dashed border-orange-400 rounded-lg flex items-center justify-center text-4xl font-black text-orange-400 animate-pulse';
                }
                card.textContent = val;
                display.appendChild(card);
            });

            generateOptions(currentAnswer, 'game3-options');
            speak("Angka berapa yang hilang?");
        }

        // Init First Game
        window.onload = () => {
            switchGame('game1');
            // Unlock audio context on first interaction
            document.body.addEventListener('click', () => {
                if(synth.paused) synth.resume();
            }, {once:true});
        };

    </script>
</body>
</html>
